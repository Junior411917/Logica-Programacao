programa
{
	
	funcao inicio()
	{
		inteiro numero

		escreva("Por favor, digite um número")
		leia(numero)

		se(numero > 0){
             escreva("Esse número é positivo")
             
		}senao se(numero < 0){
		   escreva("Esse número é negativo")
		   
		}senao se(numero == 0){
		   escreva("Esse número é zero")
		}
	}
}
